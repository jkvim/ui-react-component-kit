{
  "name": "react-component-library",
  "version": "1.0.0",
  "private": true,
  "license": "ISC",
  "main": "lib/index.js",
  "scripts": {
    "check-node": "check-node-version --node \">=9\"",
    "commit": "git-cz",
    "prepush": "npm run verify --silent",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "build": "NODE_ENV=production webpack -p --config config/webpack.config.lib.js",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "node scripts/test.js --env=jsdom --coverage",
    "test:update-snapshot": "node scripts/test.js --env=jsdom -u",
    "verify": "npm-run-all lint test && echo verify success",
    "prepublish": "npm-run-all build test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/commit-message.js"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 39,
        "functions": 47,
        "lines": 55,
        "statements": 57
      }
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/themes/**/*",
      "!src/**/model/**/*.ts",
      "!src/**/*.stories.{js,ts}",
      "!src/**/index.{js,ts}",
      "!src/setupTests.ts"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.(tsx?)$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(shortid|react-bootstrap/es)/)"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@sambego/storybook-state": "1.0.6",
    "@storybook/addon-actions": "3.3.13",
    "@storybook/addon-info": "3.3.13",
    "@storybook/addon-knobs": "3.3.13",
    "@storybook/addon-links": "3.3.13",
    "@storybook/addons": "3.3.13",
    "@storybook/react": "3.3.13",
    "@types/enzyme-adapter-react-16": "1.0.2",
    "@types/enzyme-to-json": "1.5.1",
    "@types/jest": "22.1.3",
    "@types/node": "9.4.6",
    "@types/react": "16.0.38",
    "@types/react-dom": "16.0.4",
    "@types/storybook__react": "3.0.7",
    "app-root-path": "2.0.1",
    "autoprefixer": "8.0.0",
    "babel-core": "6.26.0",
    "babel-jest": "22.2.2",
    "babel-preset-react-app": "3.1.1",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "2.3.1",
    "check-node-version": "3.2.0",
    "classnames": "2.2.5",
    "cli-highlight": "1.2.3",
    "commitizen": "2.9.6",
    "concurrently": "3.5.1",
    "css-loader": "0.28.9",
    "cz-customizable": "5.2.0",
    "cz-customizable-ghooks": "1.5.0",
    "dotenv": "5.0.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.7",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "is-promise": "2.1.0",
    "jest-cli": "22.3.0",
    "jest-junit-reporter": "1.1.0",
    "lodash": "4.17.5",
    "moment": "2.20.1",
    "node-sass": "4.7.2",
    "nodemon": "1.15.1",
    "npm-run-all": "4.1.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-loader": "2.1.0",
    "promise": "8.0.1",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-dev-utils": "5.0.0",
    "react-dom": "16.2.0",
    "sass-loader": "6.0.6",
    "serve": "6.4.11",
    "shortid": "2.2.8",
    "smooth-scroll": "12.1.5",
    "source-map-loader": "0.2.3",
    "style-loader": "0.20.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "22.0.4",
    "ts-loader": "3.5.0",
    "tslint": "5.9.1",
    "tslint-loader": "3.5.3",
    "tslint-react": "3.5.1",
    "typescript": "2.7.2",
    "url-loader": "0.6.2",
    "wait-on": "2.1.0",
    "webpack": "3.11.0",
    "webpack-dev-server": "2.11.1",
    "webpack-manifest-plugin": "1.3.2"
  },
  "dependencies": {
    "axios": "0.18.0",
    "styled-components": "3.1.6"
  }
}
